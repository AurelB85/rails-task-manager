<h1>MY LIST</h1>


<ul>
  <% @tasks.each do |task| %>
    <li class="list">
      <%= link_to task.title, task_path(task)%>
      <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    </li>
  <% end %>

</ul>
<div class="button">
<%=  link_to "Create Task" , tasks_new_path, class:"btn btn-light" %>
</div>
